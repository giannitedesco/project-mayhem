#!/bin/sh

config=Config.mak
rm -f ${config}

sname=`uname -s`
test $? -eq 0 || exit 1
os=""
suffix=""
case "$sname" in
	Linux|linux)
		os=linux
		;;
	Darwin)
		os=osx
		;;
	MINGW*)
		os=win32
		suffix=.exe
		;;
	*)
		echo "Unsupported OS: $sname"
		exit 1
esac
echo "Detected kernel: $os"
echo "SUFFIX := ${suffix}" >> ${config}
echo "OS := ${os}" >> ${config}
